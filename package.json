{
  "name": "dollys-kettle",
  "version": "0.4.0-beta",
  "description": "Static web site, generated with data from the WordPress API",
  "repository": "github:jimthoburn/dollyskettle.com",
  "license": "MIT",
  "engines": {
    "node": ">=16.20.0"
  },
  "type": "module",
  "scripts": {
    "snowpack": "snowpack",
    "build": "node --require dotenv/config build.js",
    "download:data": "node --require dotenv/config download-data.js",
    "download:images": "node --require dotenv/config download-images.js",
    "download:images:build": "npm run download:images && USE_LOCAL_DATA=1 npm run build",
    "serve": "serve ./_site/ --listen=4000",
    "start": "npm run build && npm run serve"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "dompurify": "^2.0.17",
    "dotenv": "^8.2.0",
    "fs-extra": "^9.0.0",
    "htm": "^3.0.3",
    "js-beautify": "^1.10.3",
    "jsdom": "^16.5.0",
    "node-fetch": "^2.6.1",
    "preact": "^10.3.4",
    "preact-render-to-string": "^5.1.4",
    "serve": "^11.3.0",
    "snowpack": "^2.9.3"
  },
  "snowpack": {
    "install": [
      "htm",
      "preact",
      "preact/hooks",
      "preact-render-to-string"
    ],
    "installOptions": {
      "polyfillNode": true,
      "clean": true,
      "optimize": false,
      "sourceMap": true
    }
  }
}
