{
  "name": "dollys-kettle",
  "version": "0.4.0-beta",
  "description": "Static web site, generated with data from the WordPress API",
  "repository": "github:jimthoburn/dollyskettle.com",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0 <20.0.0"
  },
  "type": "module",
  "scripts": {
    "install-web-modules": "node install-web-modules.js",
    "build": "node --require dotenv/config build.js",
    "download:data": "node --require dotenv/config download-data.js",
    "download:images": "node --require dotenv/config download-images.js",
    "download:images:build": "npm run download:images && USE_LOCAL_DATA=1 npm run build",
    "serve": "serve ./_site/ --listen=4000",
    "start": "npm run build && npm run serve"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "dompurify": "^3.0.3",
    "dotenv": "^16.3.1",
    "esinstall": "^1.1.7",
    "fs-extra": "^11.1.1",
    "htm": "^3.1.1",
    "js-beautify": "^1.14.8",
    "jsdom": "^22.1.0",
    "node-fetch": "^3.3.1",
    "preact": "^10.15.1",
    "preact-render-to-string": "^6.1.0",
    "serve": "^14.2.0"
  },
  "install-web-modules": [
    "htm",
    "preact",
    "preact/hooks",
    "preact-render-to-string"
  ]
}
